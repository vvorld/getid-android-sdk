<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_java"
        android:layout_width="0dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_margin="@dimen/one_hundred_dp"
        android:background="@drawable/ic_btn_main_gradient"
        android:text="Java"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kotlin"
        android:layout_width="0dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_marginStart="@dimen/one_hundred_dp"
        android:layout_marginTop="@dimen/thirty_two"
        android:layout_marginEnd="@dimen/one_hundred_dp"
        android:background="@drawable/ic_btn_main_gradient"
        android:text="Kotlin"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_java" />
</androidx.constraintlayout.widget.ConstraintLayout>